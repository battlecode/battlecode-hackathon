{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "types": [],
      "strictNullChecks": true,
      "noImplicitAny": true,
      "allowJs": true,
      "jsx": "React",
      "jsxFactory": "createElement"
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  